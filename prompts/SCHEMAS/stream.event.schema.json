{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://factsynth.example/schemas/stream.event.schema.json",
  "oneOf": [
    {
      "type": "object",
      "properties": {
        "t": { "const": "token" },
        "v": { "type": "string" },
        "ts": { "type": "string", "format": "date-time" },
        "meta": { "$ref": "meta.schema.json" }
      },
      "required": ["t", "v"],
      "additionalProperties": false
    },
    {
      "type": "object",
      "properties": {
        "end": { "const": true },
        "tokens": { "type": "number" },
        "meta": { "$ref": "meta.schema.json" }
      },
      "required": ["end"],
      "additionalProperties": false
    }
  ]
}
