{
  "info": { "name": "FactSynth Ultimate Pro 1.0.1", "_postman_id": "factsynth-pro-collection", "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json" },
  "item": [
    { "name": "Health", "request": { "method": "GET", "url": "{{base}}/v1/healthz" } },
